# -------------------------
# Terminal and session management
# -------------------------
cask "kitty"                 # fast GPU-based terminal
brew "tmux"                  # terminal multiplexer (session manager)

# -------------------------
# CLI utilities and tools
# -------------------------
brew "tldr"                  # simplified man pages
brew "yazi"                  # file manager (alternative to mc)
brew "btop"                  # system monitor (alternative to top)
brew "zoxide"                # smarter cd command
brew "bat"                   # enhanced cat with syntax highlighting
brew "ripgrep"               # fast text search (rg)
brew "fd"                    # simple and fast file finder
brew "jq"                    # JSON parser
brew "yq"                    # YAML/XML parser
brew "wget"                  # file downloader
brew "curl"                  # HTTP client
brew "gnupg"                 # encryption and signing tool (gpg)

# -------------------------
# Search and navigation
# -------------------------
brew "fzf"                   # fuzzy finder

# -------------------------
# GitHub and DevOps
# -------------------------
brew "gh"                    # GitHub CLI
brew "act"                   # run GitHub Actions locally

# -------------------------
# Virtualization and containers
# -------------------------
cask "utm"                   # virtualization for macOS
brew "docker"                # container platform
brew "docker-compose"        # container orchestration
brew "dive"                  # Docker image inspector
brew "trivy"                 # container vulnerability scanner

# -------------------------
# Kubernetes
# -------------------------
brew "kind"                  # local Kubernetes in Docker
brew "k3d"                   # lightweight local Kubernetes
brew "kubectl"               # Kubernetes CLI
brew "helm"                  # Kubernetes package manager
brew "kubectx"               # switch between Kubernetes contexts
brew "k9s"                   # terminal-based Kubernetes IDE
cask "lens"                  # GUI-based Kubernetes IDE
brew "stern"                 # tail logs from multiple Kubernetes pods

# -------------------------
# Infrastructure as Code and automation
# -------------------------
brew "terraform"             # infrastructure as code
brew "ansible"               # automation and configuration management

# -------------------------
# Databases
# -------------------------
cask "mongodb-compass"       # MongoDB GUI client
brew "mongosh"               # MongoDB shell
cask "dbeaver-community"     # universal SQL database IDE

# -------------------------
# HTTP and API
# -------------------------
brew "httpie"                # user-friendly HTTP client

# -------------------------
# Security and VPN
# -------------------------
brew "openvpn"               # VPN client
cask "clearvpn"              # VPN client

